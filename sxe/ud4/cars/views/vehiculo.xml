    <!-- Search View -->
    <record id="view_cars_search_view" model="ir.ui.view">
        <field name="name">cars Search</field>
        <field name="model">cars.vehiculo</field>
        <field name="arch" type="xml">
            <search>
                <field name="modelo"/>
