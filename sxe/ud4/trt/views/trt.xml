<odoo>

    <!-- Tree(list) View -->
    <record id="view_license_tree_view" model="ir.ui.view">
        <field name="name">trt.license.tree.view</field>
        <field name="model">trt.license</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number"/>
                <field name="type"/>
                <field name="user"/>
                <field name="plugins"/>
            </tree>
        </field>
    </record>

    <record id="view_plugin_tree_view" model="ir.ui.view">
        <field name="name">trt.plugin.tree.view</field>
        <field name="model">trt.plugin</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="is_monthly"/>
                <field name="price"/>
                <field name="repository"/>
            </tree>
        </field>
    </record>

    <record id="view_user_tree_view" model="ir.ui.view">
        <field name="name">trt.user.tree.view</field>
        <field name="model">trt.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="email"/>
                <field name="password"/>
                <field name="licenses"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_license_search_view" model="ir.ui.view">
        <field name="name">trt.license.search.view</field>
        <field name="model">trt.license</field>
        <field name="arch" type="xml">
            <search>
                <field name="number"/>
                <field name="type"/>
                <field name="user"/>
                <field name="plugins"/>
            </search>
        </field>
    </record>
    <record id="view_plugin_search_view" model="ir.ui.view">
        <field name="name">trt.plugin.search.view</field>
        <field name="model">trt.plugin</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="is_monthly"/>
                <field name="price"/>
                <field name="repository"/>
            </search>
        </field>
    </record>
    <record id="view_user_search_view" model="ir.ui.view">
        <field name="name">trt.user.search.view</field>
        <field name="model">trt.user</field>
        <field name="arch" type="xml">
            <search>
                <field name="email"/>
                <field name="password"/>
                <field name="licenses"/>
            </search>
        </field>
    </record>

