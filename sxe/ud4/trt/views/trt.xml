    <!-- Actions -->
    <record id="action_plugin" model="ir.actions.act_window">
        <field name="name">Plugin</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">trt.plugin</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Plugin.
            </p>
        </field>
    </record>

    <record id="action_license" model="ir.actions.act_window">
        <field name="name">License</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">trt.license</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create License.
            </p>
        </field>
    </record>

    <record id="action_user" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">trt.user</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create User.
            </p>
        </field>
    </record>

    <menuitem id="trt_main_menu" name="TRT" sequence="1"/>

    <menuitem id="trt_type_menu" name="Plugin" parent="trt_main_menu"
        action="trt.action_plugin" groups="trt.group_trt_manager"
        sequence="1"/>

    <menuitem id="trt_type_menu" name="License" parent="trt_main_menu"
        action="trt.action_license" groups="trt.group_trt_manager"
        sequence="1"/>

    <menuitem id="trt_type_menu" name="User" parent="trt_main_menu"
        action="trt.action_user" groups="trt.group_trt_manager"
        sequence="1"/>
