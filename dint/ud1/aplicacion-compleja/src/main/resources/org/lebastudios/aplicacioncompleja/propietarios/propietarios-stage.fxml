<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<HBox xmlns="http://javafx.com/javafx" fx:id="root"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.lebastudios.aplicacioncompleja.propietarios.PropietariosStageController" spacing="15">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="550" spacing="5">
        <Button text="%phrase.nuevopropietario" onAction="#addButton" fx:id="addButton"/>
        <TableView VBox.vgrow="ALWAYS" maxHeight="Infinity" maxWidth="Infinity" fx:id="propietariosTableView">
            <columns>
                <TableColumn text="%word.nombre"/>
                <TableColumn text="DNI"/>
                <TableColumn text="%word.telefono"/>
                <TableColumn text="%word.email"/>
            </columns>
        </TableView>
    </VBox>

    <VBox HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="300" spacing="5" fx:id="propietarioDataPane">
        <HBox alignment="CENTER_RIGHT" spacing="10" maxWidth="Infinity">
            <Button text="%word.eliminar" onAction="#removeButton" fx:id="removeButton" visible="false" />
            <Button text="%word.guardar" onAction="#saveButton" defaultButton="true" fx:id="saveButton"/>
            <Button text="%word.cancel" onAction="#hidePropietarioDataPane" fx:id="cancelButton"/>
        </HBox>
        
        <GridPane HBox.hgrow="ALWAYS" maxWidth="Infinity" VBox.vgrow="ALWAYS" maxHeight="Infinity" hgap="10" vgap="5">
            <columnConstraints>
                <ColumnConstraints prefWidth="125"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <Label text="%word.dni" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField maxWidth="Infinity" fx:id="dniField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="%word.nombre" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField maxWidth="Infinity" fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="%word.apellido1" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField maxWidth="Infinity" fx:id="apellido1Field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="%word.apellido2" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField maxWidth="Infinity" fx:id="apellido2Field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="%word.telefono" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField maxWidth="Infinity" fx:id="telefonoField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="%word.email" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField maxWidth="Infinity" fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        </GridPane>
    </VBox>
</HBox>
