<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx" fx:id="root"
      xmlns:fx="http://javafx.com/fxml" spacing="10" maxWidth="250">
    <padding>
        <Insets top="15" bottom="15" left="15" right="15" />
    </padding>
    
    <Label fx:id="infoLabel" wrapText="true" />
    <HBox alignment="CENTER_RIGHT">
        <Button onAction="#onAcceptAction" text="%word.aceptar" alignment="CENTER" minWidth="75" />
    </HBox>
</VBox>
